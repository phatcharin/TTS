<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/etWordFront"
        android:hint="text front"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="46dp"
        android:layout_marginLeft="10dp"
        />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnImgFront"
        android:background="@android:drawable/ic_menu_gallery"
        android:layout_alignBottom="@+id/etWordFront"
        android:layout_toRightOf="@+id/etWordFront"
        android:layout_toEndOf="@+id/etWordFront" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnImgGelF"
        android:layout_below="@+id/etWordFront"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@android:drawable/ic_menu_gallery" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnImgCamF"
        android:layout_alignBottom="@+id/btnImgGelF"
        android:layout_toRightOf="@+id/btnImgGelF"
        android:layout_toEndOf="@+id/btnImgGelF"
        android:background="@android:drawable/ic_menu_camera" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/ivImgFront"
        android:src="@android:drawable/sym_def_app_icon"
        android:layout_below="@+id/btnImgCamF"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/etWordBack"
        android:hint="text Back"
        android:gravity="center"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnImgBack"
        android:background="@android:drawable/ic_menu_gallery"
        android:layout_alignBottom="@+id/etWordBack"
        android:layout_toRightOf="@+id/etWordBack"
        android:layout_toEndOf="@+id/etWordBack" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnImgGelBack"
        android:background="@android:drawable/ic_menu_gallery"
        android:layout_below="@+id/etWordBack"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnImgCameBack"
        android:background="@android:drawable/ic_menu_camera"
        android:layout_alignBottom="@+id/btnImgGelBack"
        android:layout_toRightOf="@+id/btnImgGelBack"
        android:layout_toEndOf="@+id/btnImgGelBack" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/ivImgBack"
        android:src="@android:drawable/sym_def_app_icon"
        android:layout_below="@+id/btnImgCameBack"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ADD"
        android:id="@+id/btnAdd"
        android:layout_marginBottom="33dp"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/etWordBack"
        android:layout_toEndOf="@+id/etWordBack" />

</RelativeLayout><!-- From: file:/E:/RemembearPJ/Tiw/ParseStarterProject/src/main/res/layout/activity_add_word.xml -->